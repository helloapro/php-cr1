<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link href='css/styles.css' type='text/css' rel='stylesheet'>
        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Address Book</h1>
            <form action='/create_contact' method='post'>
                <div class="row">
                    <div class="col-md-6">
                        <h2>Add a contact:</h2>

                        <div class="form-group">
                            <label for="first_name">First Name</label>
                            <input id="first_name" name="first_name" class="form-control" type="text">
                            <label for="last_name">Last Name</label>
                            <input id="last_name" name="last_name" class="form-control" type="text">

                            <label for="phone">Phone Number</label>
                            <input id="phone" name="phone" class="form-control" type="tel">

                            <label for="address">Address Info</label>
                            <input id="address" name="address" class="form-control" type="text">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add Contact!</button>
            </form>

            {% if contacts is not empty %}
                <h4>Here are all your Contacts thus far:</h4>
                <ul>
                    {% for contact in contacts %}
                        <li>
                            <p>Name: <span class="name">{{ contact.getFirstName }} {{ contact.getLastName}}</span> </p>
                            <p>Phone number: {{ contact.getPhone }}</p>
                            <p>Address: {{ contact.getAddress }}</p>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action='/delete_contacts' method='post'>
                <button type="submit" class="btn btn-warning">Clear all contacts</button>
            </form>

        </div>
    </body>
</html>
